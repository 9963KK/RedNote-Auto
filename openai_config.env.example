OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4
OPENAI_CONCURRENCY=5

# DeepSeek for translation (separate credentials)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_CONCURRENCY=5

# MCP publiship
ENABLE_MCP_PUBLISH=true
XHS_MCP_URL=http://127.0.0.1:18060/mcp

# ========== Monitor / Retry ==========
MODEL_HEALTH_CHECK_INTERVAL=60
MODEL_HEALTH_CHECK_TIMEOUT=5
CHECKPOINT_RETENTION_HOURS=24

AUTO_RETRY_ENABLED=true
AUTO_RETRY_MAX_ATTEMPTS=3
AUTO_RETRY_DELAY_SECONDS=30

# ========== LLM Timeouts ==========
LLM_REQUEST_TIMEOUT_S=45
LLM_MAX_RETRIES=2

# ========== Publish / Render Tuning ==========
PUBLISH_MAX_PAPERS=4
IMAGE_CONCURRENCY=2
COVER_ZOOM=1.5
